.calculator
  //border 0.1rem solid black
  padding 0.1rem
  border-radius 0.3rem
  box-shadow 2px 2px 10px 5px rgba(154, 147, 140, 1)
  background #d5d4d6

  &__screen
    border 0.1rem solid black
    border-radius 0.3rem
    margin 0.5rem

  &__screen-input
  &__screen-result
    width 100%
    border none
    font-size 2rem
    background #FFFFFF
    color #000000
    text-align right
    border-radius 0.3rem

  &__screen-input
    font-size 1rem
    border-bottom-left-radius 0
    border-bottom-right-radius 0

  &__screen-result
    border-top-left-radius 0
    border-top-right-radius 0

  &__buttons
    display flex
    flex-wrap wrap
    border 0.1rem solid black
    border-radius 0.3rem
    margin 0.5rem

  &__button
    width 2.95rem
    margin 0.1rem